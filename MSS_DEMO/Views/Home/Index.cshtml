       <h5>@Html.ActionLink("Remove data", "Index", "CleanSystem")</h5>
}
else if (Role == 3)
{
    <h5>@Html.ActionLink("Mentor", "Mentor", "Student_Course_Log")</h5>
}
else
{
    <h5>@Html.ActionLink("Certificates", "Index", "Certificates")</h5>
