@model MSS_DEMO.Models.Campu

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Campus</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal"> 
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Campus_ID)

    <div class="form-group">
        <label class="control-label col-md-2">Campus Name</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Campus_Name, new { htmlAttributes = new { @class = "form-control", @required ="true" } })
            <label style="color:red" id="checkName" hidden> This field is a required </label>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Address</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" , @required ="true", @style = "max-width: 800px;, width:800px;"} })
            <label style="color:red" id="checkAddress" hidden> This field is a required </label>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Contact Point</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Contact_Point, new { htmlAttributes = new { @class = "form-control" , @required ="true"} })
            <label style="color:red" id="checkContact" hidden> This field is a required </label>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input id="btn" type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}
<span style="color:red;">@ViewBag.Error</span>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
