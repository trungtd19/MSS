@using MSS_DEMO.Common
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mentoring Support System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <meta name="google-signin-client_id" content="1069005412125-7a4a3760pfvmrimg2guhs1ocguo8ne94.apps.googleusercontent.com">
    <script src="https://apis.google.com/js/platform.js?onload=onLoad" async defer></script>
    @*?onload=onLoad*@
    <script src="~/Content/Scripts/Google.js"></script>
    <script src="/Content/Scripts/HoldOn.js"></script>

    @{
        var session = (UserLogin)Session[MSS_DEMO.Common.CommonConstants.User_Session];
    }
    <style>
        .form-group {
            padding: 3px;
            margin: 10px;
        }

        .form-control {
            height: 32px;
            width: 180px;

           
        }

        table, th, td {
            border: 1px solid black;
        }

        .navbar-inverse {
            background-color: #0e5ba9;
            border-color: #0e5ba9;
            color:#FFFFFF;
        }
        .navbar-inverse .navbar-brand {
            color: #FFFFFF;
        }

    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header  ">
                @Html.ActionLink("FPT Education on Coursera - Mentoring Support System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @if (session != null)
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li >@Html.ActionLink("Welcome:" + " " + @session.UserName, "Index", "Home", new { @style = "color:#FFFFFF" })</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">                        
                        <li><a href="~/Login/Logout" onclick="signOut();" style="color:#FFFFFF">Logout</a></li>

                    </ul>
                }
            </div>
        </div>
    </div>
    <div class="container body-content">

        @RenderBody()
        <hr />
        <footer>
        <p>&copy; @DateTime.Now.Year - FPT Education | @Html.ActionLink("About Us", "Index", "About")</p>
        </footer>
    </div>
</body>
</html>

