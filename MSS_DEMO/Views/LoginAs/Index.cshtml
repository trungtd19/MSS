
@{
    ViewBag.Title = "Index";
}
<br />
<span>@Html.ActionLink("Home", "Index", "Home") >Login as</span>
<hr />
<div class="form-group">
    @using (Html.BeginForm("Index", "LoginAs", FormMethod.Post))
    {
        <div class="col-md-1">
            Login:
        </div>
        <div class="col-md-2">
            @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control", @required = "true" })
            @Html.Hidden("searchCheck", "true")
        </div>
        <div class="col-md-1">
            <input class="btn btn-success" type="submit" value="Search" />
        </div>
        <div class="col-md-5"></div>
    }
    <br />
    <br />
    <span style="color: red;">@ViewBag.Nodata</span>
</div>

