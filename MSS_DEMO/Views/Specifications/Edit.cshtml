@model MSS_DEMO.Models.Specification

@{
    ViewBag.Title = "Edit";
}
    <style>
        textarea {
            max-width: 1200px;
            width: 800px;
            height: 200px;
        }
    </style>
<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Specification</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Specification_ID)

    <div class="form-group">
        @Html.LabelFor(model => model.Subject_ID, "Subject ID", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Subject_ID", null, htmlAttributes: new { @class = "form-control", @required = "true" })
            <label style="color:red" id="checkSubject" hidden> This field is a required </label>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Specification_Name, "Specification Name", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Specification_Name, new { htmlAttributes = new { @class = "form-control", @required = "true", @style = "max-width: 800px;, width:800px;" } })
            <label style="color:red" id="checkName" hidden> This field is a required </label>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Is_Real_Specification, "Real Specification", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.CheckBoxFor(model => model.Is_Real_Specification)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Url, "Link Coursera", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @class = "form-control", @required = "true", @style = "max-width: 800px;, width:800px;" } })
            <label style="color:red" id="checkUrl" hidden> This field is a required </label>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Description, "Description", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Description, new { @required = "true" })
            <label style="color:red" id="checkDes" hidden> This field is a required </label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input id="btn" type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}
<span style="color:red;">@ViewBag.Message</span>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
