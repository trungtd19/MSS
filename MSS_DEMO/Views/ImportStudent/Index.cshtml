<hr />
<h4>Import Student</h4>
@Html.DropDownList("Semester_ID", null , htmlAttributes: new { @class = "form-control" })
<br />
<div class="container">
    <div class="tab-content">
        <div class="tab-pane active">
            <div class="row">
                <div class="form-group">
                    @Html.Label("File Upload", new { @class = "col-sm-3" })
                    <div class="col-sm-7">
                        <input type="file" id="postedFile" name="postedFile" class="form-control" accept=".csv" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-3 col-md-10">
                        <br />
                        <input type="submit" title="Upload" value="Upload" class="btn btn-default" id="btn" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/Content/Scripts/jquery-3.4.1.js"></script>
<script src="/Content/Scripts/HoldOn.js"></script>
<script>
        $('#progress_container').hide();
        $("#btn").click(function () {
           var selectSemester = $("#Semester_ID").val();
            if (selectSemester == "None") {
                  sweetAlert("Lỗi!","Choose semester please!", "error");
            }
            else {
            var semester = $("#Semester_ID").val();
            var formData = new FormData();
            var file = document.getElementById("postedFile").files[0];
            formData.append("FileUpload", file);
            formData.append("Semester", semester);
            HoldOn.open({
                    message: 'Please wait...',
                    theme: "sk-circle"
                        });
            $.ajax({
                url: '@Url.Action("Import","ImportStudent")',
                type: 'POST',
                data: formData,
                dataType: 'json',
                contentType: false,
                processData: false,
                success: function (data) {
                    if (data.message == "Import successfull!") {
                         sweetAlert("Successfull!", data.message, "success");
                    }
                    else
                    sweetAlert("Error!", data.message, "error");
                 }
                 }).done(function () {
                     HoldOn.close();
                });
            }         
        });
</script>
