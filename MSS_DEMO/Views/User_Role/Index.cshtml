@model IEnumerable<MSS_DEMO.Models.User_Role>

@{
    ViewBag.Title = "Subject";
}

<!DOCTYPE html>
<br />
<span>@Html.ActionLink("Home", "Index", "Home") > User Management</span>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h1>User Management</h1>
      
        @using (Html.BeginForm("Index", "User_Role", FormMethod.Post))
        {           
            <div class="col-md-2">
                @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @class = "form-control" })
                @Html.Hidden("searchCheck", "true")
            </div>
            <div class="col-md-1">
                <input class="btn btn-success" type="submit" value="Search" />
            </div>
            @Html.ActionLink("Add new user", "Create")      
        }


    @if (Model != null)
    {
        <table border="1">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Login)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.isActive)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Role.Role_Name)
                </th>              
            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.ActionLink(item.Login, "Details", new { id = item.User_ID })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role.Role_Name)
                </td>
            </tr>
            }

        </table>
    }
</body>
</html>
